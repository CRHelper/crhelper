<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.udham.crhelper.stuInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#2196F3"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:elevation="5dp"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"

                android:src="@drawable/profile" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Roll no:"
                    android:textColor="@color/background_material_dark"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/roll_no"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Email:"
                    android:textColor="@color/background_material_dark"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/email"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Mobile:"
                    android:textColor="@color/background_material_dark"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/mobile"
                    />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"

        android:background="#FFFFFF">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="Marks:"
                        android:textColor="@color/background_material_dark"
                        android:textSize="30sp"
                        android:layout_marginStart="20dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#CFD8DC"
                        android:elevation="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginStart="20dp"
                        >

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Subject 1"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="marks 1"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/marks1"/>

                        </TableRow>
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 2"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="marks 2"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/marks2"/>


                        </TableRow>

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 3"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="marks 3"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/marks3"/>


                        </TableRow>

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 4"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="marks 4"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/marks4"/>


                        </TableRow>

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 5"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="marks 5"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/marks5"/>


                        </TableRow>


                    </TableLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="Teacher's Remarks:"
                        android:textColor="@color/background_material_dark"
                        android:textSize="30sp"
                        android:layout_marginStart="20dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#CFD8DC"
                        android:elevation="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp">

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Subject 1"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="remark 1"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/remarks1"/>

                        </TableRow>
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 2"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="remark 2"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/remarks2"/>


                        </TableRow>

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 3"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="remark 3"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/remarks3"/>


                        </TableRow>

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 4"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="remark 4"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/remarks4"/>


                        </TableRow>

                        <TableRow android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Subject 5"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="remark 5"
                                android:textColor="@color/background_material_dark"
                                android:textSize="20sp"
                                android:layout_marginStart="40dp"
                                android:id="@+id/remarks5"/>


                        </TableRow>


                    </TableLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="Provide Feedback:"
                        android:textColor="@color/background_material_dark"
                        android:textSize="30sp"
                        android:layout_marginStart="20dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter data here !! "
                        android:id="@+id/ed"
                        android:textColor="@color/primary_material_dark"
                        android:textColorHint="@color/abc_background_cache_hint_selector_material_dark"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:id="@+id/submit"/>


                </LinearLayout>



            </LinearLayout>



        </ScrollView>


    </LinearLayout>

</RelativeLayout>
